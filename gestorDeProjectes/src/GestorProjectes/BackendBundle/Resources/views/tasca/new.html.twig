                {{ form_errors(form.descripcio) }}
            </div>
            <div class="clearfix"></div>
            <br>
            <div class="col-md-4">
                {{ form_label(form.estat,"Estat")}}
                {{ form_widget(form.estat) }}
                {{ form_errors(form.estat) }}
            </div>
             <div class="clearfix"></div>
            <br>
            <div>               
                {{ form_widget(form.save) }}        
            </div>             
                  
            {{ form_end(form) }}                  
