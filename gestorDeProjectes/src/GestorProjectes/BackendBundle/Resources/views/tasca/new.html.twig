{% block body %}
    <div class="panel-title">
        <h1>Tasca creation</h1>
    </div>
    <div class="container">
        <div class="row">
            {{ form_start(form,{'attr': {'class': 'col-md-12'}}) }}
            <div class="col-md-4">
                {{ form_label(form.nom,"Nom")}}
                {{ form_widget(form.nom) }}
                {{ form_errors(form.nom) }}
            </div>
            <div class="col-md-4">
                {{ form_label(form.descripcio,"Descripcio")}}
