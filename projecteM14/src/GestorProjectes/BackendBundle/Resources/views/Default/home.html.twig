                        {% endfor %}
                    </div>
                </div>
                <div class="informacion-tasca col-xs-12 col-sm-8 col-md-8 col-lg-8 border-tasca">    

                    <div class="marco-tasca-info alinear-info">
                        <p class="info-tasca-separacion" id="pseparada"> {{ tasca.nom  }}</p>
                        <p class="info-tasca-separacion"> {{ tasca.descripcio }}</p>
                        <p class="info-tasca-separacion"> {{ tasca.descripcio }}</p>
                        <p class="info-tasca-separacion"> {{ tasca.nom  }}</p>
