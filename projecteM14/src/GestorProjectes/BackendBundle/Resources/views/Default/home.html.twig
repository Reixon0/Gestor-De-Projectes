                                <p class="nombre-tasca"> {{ item.nom  }}</p>
                                <p class="descripcion-tasca"> {{ item.descripcio }}</p>
                                <a id="tasca" class="tasca-link" href={{ path('gestor_projectes_backend_buscaTasques', {'id': item.id}) }}></a>
